# PostgreSQL
DB_USER=your_db_user
DB_HOST=localhost
DB_DATABASE=todo_db
DB_PASSWORD=your_db_password
DB_PORT=5432

# TLS/SSL for Amazon RDS (recommended)
DB_SSL=true
# Path to your region's RDS CA bundle (place the file under backend/ and point to it)
DB_SSL_CA=./ap-south-1-bundle.pem

# Email (Gmail example)
EMAIL_USER=your.email@gmail.com
EMAIL_PASS=your_email_app_password

# JWT secret (for bonus auth)
JWT_SECRET=supersecret_jwt_key

# Port (optional)
PORT=3000
